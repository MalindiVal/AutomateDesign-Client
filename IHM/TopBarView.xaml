<UserControl x:Class="IHM.TopBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IHM"
             mc:Ignorable="d" 
             Height="64" Background="{DynamicResource App.Surface}">
    <UserControl.Resources>
        <!-- Style bouton primaire -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                             Background="{DynamicResource App.Primary}"
                             CornerRadius="12"
                             Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <!-- Bordure inférieure -->
    <Border BorderBrush="{DynamicResource App.Divider}" BorderThickness="0,0,0,1">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock Text="{Binding LoginMessage}" Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontSize="16" FontWeight="Heavy"/>
                <Button Content="Deconnexion" Name="LogoutButton" Command="{Binding Logout}" Style="{StaticResource PrimaryButton}" Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Button Content="Connexion" Name="LoginButton" Command="{Binding Login}" Style="{StaticResource PrimaryButton}" Visibility="{Binding NotConnected, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="16,0">
                <!-- Nom -->
                <Image Source="pack://application:,,,/images/AUTOMATEDESIGN.png"
                   Height="36" Stretch="Uniform"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>

                <!-- Logo -->
                <Image Source="/IHM;component/images/logo.png"
                   Height="28" Stretch="Uniform"
                   VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

    <UserSecretsId>c20c657f-827f-4d15-bba3-086f063f773c</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
